<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>reverse-lights.ac</path>

	<!-- Reverse thrust lights -->
	<animation>
		<type>material</type>
		<object-name>RevUnlock1</object-name>
		<condition>
			<and>
				<greater-than>
					<property>engines/engine[0]/reverser-pos-norm</property>
					<value>0</value>
				</greater-than>
				<less-than>
					<property>engines/engine[0]/reverser-pos-norm</property>
					<value>1</value>
				</less-than>
			</and>
		</condition>
		<emission>
			<red>0.5</red>
			<green>0.388</green>
			<blue>0</blue>
		</emission>
	</animation>
	<animation>
		<type>material</type>
		<object-name>RevThrust1</object-name>
