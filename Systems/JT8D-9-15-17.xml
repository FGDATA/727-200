<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
	
    <filter>
        <name>EPR Scale</name>
        <type>gain</type>
        <gain>1</gain>
        <input> 
            <expression>
                <table>
                    <property>/position/altitude-ft</property> 
                    <entry><ind>    0</ind><dep>1.259</dep></entry>
                    <entry><ind>44000</ind><dep>2.745</dep></entry>
                </table>
            </expression>
        </input>
		<output>/engines/epr-scale</output>
    </filter>
	
    <filter>
        <name>EPR Scale 2</name>
        <type>gain</type>
        <gain>1</gain>
        <input> 
            <expression>
                <table>
                    <property>/position/altitude-ft</property> 
                    <entry><ind>    0</ind><dep>0.992</dep></entry>
                    <entry><ind>13000</ind><dep>0.755</dep></entry>
                    <entry><ind>42000</ind><dep>0.406</dep></entry>
                </table>
            </expression>
        </input>
		<output>/engines/epr-scale-b</output>
    </filter>

    <filter>
        <name>EPR 1</name>
        <type>gain</type>
        <gain>1</gain>
        <input>
            <expression>
                <table>
                    <property>/engines/engine[0]/n1-actual</property>
                    <entry><ind> 18.7</ind><dep>0.00</dep></entry>
                    <entry><ind> 33.4</ind><dep>0.03</dep></entry>
                    <entry><ind>104.6</ind><dep>1.00</dep></entry>
                </table>
            </expression>
			<scale>/engines/epr-scale</scale>
        </input>
		<output>/engines/engine[0]/epr-actual-cmd</output>
    </filter>
	
    <filter>
        <name>EPR 1</name>
        <type>noise-spike</type>
        <input>
            <expression>
				<sum>
					<property>/engines/engine[0]/epr-actual-cmd</property>
					<property>/engines/epr-scale-b</property>
				</sum>
            </expression>
        </input>
		<output>/engines/engine[0]/epr-actual</output>
		<max-rate-of-change>0.2</max-rate-of-change>
    </filter>
	
    <filter>
        <name>EPR 2</name>
        <type>gain</type>
        <gain>1</gain>
