					<value>1</value>
				</equals>
			</condition>
            <expression>
                <table>
                    <property>/controls/flight/aileron</property> 
                    <entry><ind>-0.1</ind><dep>  0</dep></entry>
                    <entry><ind>-1.0</ind><dep>0.5</dep></entry>
                </table>
            </expression>
		</input>
		<output>/controls/flight/spoiler-1-cmd</output>
		<min>0.0</min>
		<max>1.0</max>
