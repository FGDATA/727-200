<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <filter>
        <name>EPR Scale</name>
        <type>gain</type>
        <gain>1</gain>
        <update-interval-secs type="double">0.05</update-interval-secs>
        <input> 
            <expression>
                <table>
                    <property>/position/altitude-ft</property> 
                    <entry><ind>    0</ind><dep>1.259</dep></entry>
                    <entry><ind>44000</ind><dep>1.775</dep></entry>
                </table>
            </expression>
        </input>
		<output>/engines/epr-scale</output>
    </filter>
	
    <filter>
        <name>EPR Scale 2</name>
        <type>gain</type>
