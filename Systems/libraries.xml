            <expression>
                <table>
                    <property>/position/altitude-ft</property> 
                    <entry><ind>    0</ind><dep>0.992</dep></entry>
                    <entry><ind>13000</ind><dep>0.975</dep></entry>
                    <entry><ind>42000</ind><dep>0.966</dep></entry>
                </table>
            </expression>
        </input>
		<output>/engines/epr-scale-b</output>
    </filter>

