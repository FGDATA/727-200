<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <filter>
        <name>EPR Scale</name>
        <type>gain</type>
        <gain>1</gain>
        <update-interval-secs type="double">0.05</update-interval-secs>
        <input> 
            <expression>
                <table>
                    <property>/position/altitude-ft</property> 
                    <entry><ind>    0</ind><dep>1.255</dep></entry>
                    <entry><ind>42000</ind><dep>1.545</dep></entry>
                </table>
            </expression>
        </input>
		<output>/engines/epr-scale</output>
    </filter>
	
